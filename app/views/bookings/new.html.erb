<div class="booking-banner d-flex justify-content-center">
  <div class="booking-form-container">
   <h2>Book the skill you need</h2>
    <p>
      Skill provided by: <%= @skill.user.name%><br>
      Hourly rate for <%= @skill.name %>: <span id="price"><%= @skill.price %></span> RMB
    </p>

<div class = "booking-form d-flex ml-3 mr-2">
    <div class="form-inputs-booking d-flex">
<%= simple_form_for [@skill, @booking] do |f| %>
<%= f.input :date, label:'Booking Date'%>
<%= f.input :hoursbooked ,
      hint: ("The input must be an integer"),
      :input_html => {:id => "hours",:value => "0" },
      label:'Hours of skill needed' %>
<%= f.input :totalrate ,
      label:'Total price(RMB)',
      :input_html => {:id => "rate",:value => "0" }
      %>

  <div class="form-actions-booking d-flex justify-content-around">
   <!-- <button type="button" onclick="calculatePrice()">Calculate Price</button> -->
    <%= f.button :submit, "Book"%>
    <%= link_to "Back",skill_path(@skill), class: "btn btn-lg btn-light"  %>

  </div>
    <% end %>
    </div>
</div>

      </div>
    </div>


</body>


