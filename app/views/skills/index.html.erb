<head>
  <link href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,200;0,800;1,800&display=swap" rel="stylesheet">
</head>
<body>
  <div class="page-wrapper">
    <div class="row">
      <!--Column 1: Left -->
      <div class="double-column">
        <div class="white-column">
          <div class="first-title">
            <h1>Book your services</h1>
          </div>
          <div class="second-title">
            <h1>TEACHING</h1>
          </div>

        </div>


          <div class="cards-container">
            <div class="card">
              <div class="row">

                <!--FIRST COLUMN IN CARD: LEFT-->
                <div class="card-one-column">
                  <div class="card-avatar">
                    <%= image_tag "https://kitt.lewagon.com/placeholder/users/arthur-littm", class: "avatar-large", alt: "avatar-large" %>
                  </div>

                  <div class="book-button">
                    <p>View</p>
                  </div>
                </div>

                <!--SECOND COLUMN IN CARD: RIGHT-->
                <div class="card-double-column">
                  <div class="card-name">
                    <p>(Name)</p>
                  </div>
                  <div class="card-group">

                    <div class="card-skill">
                      <p>(skill)</p>
                    </div>
                  </div>
                  <div class="card-skill-info">
                    <div class="location">
                      <p>(location)</p>
                    </div>

                    <div class="remote">
                      <p>(remote)</p>
                    </div>

                    <div class="price">
                      <p>(price)</p>
                    </div>
                  </div>
                </div>
                </div>
            </div>

            <div class="card">
              <div class="row">

                <!--FIRST COLUMN IN CARD: LEFT-->
                <div class="card-one-column">
                  <div class="card-avatar">
                    <%= image_tag "https://kitt.lewagon.com/placeholder/users/arthur-littm", class: "avatar-large", alt: "avatar-large" %>
                  </div>

                  <div class="book-button">
                    <p>View</p>
                  </div>
                </div>

                <!--SECOND COLUMN IN CARD: RIGHT-->
                <div class="card-double-column">
                  <div class="card-name">
                    <p>(Name)</p>
                  </div>
                  <div class="card-group">

                    <div class="card-skill">
                      <p>(skill)</p>
                    </div>
                  </div>
                  <div class="card-skill-info">
                    <div class="location">
                      <p>(location)</p>
                    </div>

                    <div class="remote">
                      <p>(remote)</p>
                    </div>

                    <div class="price">
                      <p>(price)</p>
                    </div>
                  </div>
                </div>
                </div>
            </div>




          </div>



      </div>

      <!--Column 2: Right -->
      <div class="column">
        <div class="map-column">
          <p>Map coming soon</p>
        </div>
      </div>
    </div>
  </div>
</body>
