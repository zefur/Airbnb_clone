<div class="new-skill-container">
<h1>Edit skill</h1>


<div class="skill-form-container">

  <%= simple_form_for(@skill) do |f| %>

    <div class="form-inputs">
      <%= f.input :name %>
      <%= f.input :description %>
      <%= f.input :tag, collection: %w[Driving DIY Coding Chores Teaching Gardening Craftwork Pet\ care Baby\ care Art] %>
      <%= f.input :skill_location %>
      <%= f.input :price %>
      <%= f.input :photo, as: :file, input_html: { multiple: true }, class: "input-photo" %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, :class => "form-button"%>
    <%= link_to "Back", :back, class: "btn btn-lg btn-light"%>
  </div>
    </div>

  <% end %>
</div></div>


</div>
