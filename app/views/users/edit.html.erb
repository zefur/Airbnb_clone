<head>
<link href="https://fonts.googleapis.com/css2?family=Nunito:wght@200&family=Quicksand:wght@300&display=swap" rel="stylesheet">
</head>


<!--navbar starts-->
<%= render 'shared/nav' %>







<div class= "row">

  <div class='col-3 justify-content-center align-self-end' style="height: 100vh">
    <div class="profile-edit-page-title">
      <h3>User profile</h3>
    </div>
    <div class="thumbnail" >
    <%= image_tag "https://images.unsplash.com/photo-1569913486515-b74bf7751574?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=670&q=80", class: "profiles-img", alt: "avatar-round" %>
    </div>
    <%= link_to "+ Edit Photo", new_user_session_path, class: "edit-profile-page-button" %>
    <%= link_to "Back", :back, class: "back-button-on-edit-page"%>
    <div>

    </div>
  </div>

  <div class= 'col-9' style='height: 100vh'>
    <div style="padding-top: 40px;  height: 50vh" >
      <%= form_for @user do |f| %>

          <div class="form-row">

            <div class="col-6 a">
            <div>
              <div>
                <%= f.label :name %>
              </div>
              <div>
                <%= f.text_field :name, class:"edit-form" %>
              </div>
            </div>


            <div>
              <div>
                <%= f.label :contact %>
              </div>
              <div>
                <%= f.text_field :contact, class:"edit-form" %>
              </div>
            </div>
            <div>
              <div>
                <%= f.label :email %>
              </div>
              <div>
                <%= f.text_field :email, class:"edit-form" %>
              </div>
              <div>
                <%= f.label :background %>
              </div>
              <div>
                <%= f.text_area :background, class:"edit-form text-area" %>
              </div>
            </div>
            </div>


           <div class="col-6 ">

            <div>
              <div>
                <%= f.label :username %>
              </div>
              <div>
                <%= f.text_field :username, class:"edit-form" %>
              </div>
            </div>

            <div>
              <div>
                <%= f.label :location %>
              </div>
              <div>
                <%= f.text_field :location, class:"edit-form" %>
              </div>
            </div>
            <div class="col-6 a">
            <div>
              <div>
                <%= f.label :avatar, class:"choose-avatar-label"%>
              </div>
              <div>
                <%= f.file_field :avatar, as: :file, class:"choose-avatar-input"%>
              </div>
            </div>


            <div class="form-actions">
              <%= f.button :submit, class:"submit-edit-form" %>
            </div>
            </div>
         </div>
      <% end %>
    </div>
</div>
<div style="margin-top: 15px">
<%= render 'shared/edit_profile' %>
</div>

  </div>
</div></div>
</div>
</div>






