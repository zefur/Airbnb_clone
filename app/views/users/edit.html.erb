           <%= f.input :name, label_html:{class:"label"} %>
           <%= f.input :contact, label_html:{class:"label"} %>
           <%= f.input :email, label_html:{class:"label"} %>
        </div>
        <div class="form-actions">
        <%= f.button :submit %>
        <%= link_to 'Back', skills_path %>

        </div>
      </div>
    <% end %>
  </div>
