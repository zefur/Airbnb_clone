
  <!--navbar starts-->
  <div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
    <%= link_to "skillSWAPPER", class: "navbar-brand" %>
      <%#= image_tag "tools.png" %>
    <%# end %>

    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>


    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav mr-auto">
        <li class="nav-item active">
          <%= link_to "Categories", "#", class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "Sign up/Sign in/Profile", "#", class: "nav-link" %>
        </li>
         <li class="nav-item">
          <%= link_to "Log out", "#", class: "nav-link" %>
        </li>
      </ul>
    </div>
  </div>

  <!--navbar ends-->

  <h1>About me</h1>

  <div class="first-section">

    <!--avatar starts-->
    <div class="avatar-container">
      <%= image_tag "https://kitt.lewagon.com/placeholder/users/krokrob", class: "avatar-square", alt: "avatar-square" %>

      <div class="avatar-green-background">
      </div>

      <div class="avatar-name">
        <p><%= @user.name %></p>
      </div>
    </div>
    <!--avatar ends-->

    <!--services starts-->
    <div class="services-container">
      <% @user.skills.limit(3).each do |skill| %>
      <div class="services-card-container">
        
        <div class="services-card">
        
          <div class="service-name">
          
            <p><%= skill.name %></p>
          </div>
          
          <div class="service-category">
           <p><%= skill.skill_type %>
          </div>
          
        </div>

        <div class="view-button">
          <%= link_to "View", skill_path(skill) %>
        </div>

        <div class="book-button">
         <%#= link_to "Book", new_skill_booking_path(skill)%>
        </div>
        
      </div>
       <% end %>
    </div>
   
    <!--services ends-->
  </div>

  <div class="second-section">

    <!--contact-container starts-->
    <div class="contact-container">
      <p>Contact Info</p>
      <div class="contact-info">
        <p><%= @user.contact %>  </p>
      </div>
    </div>

    <!--contact-container ends-->

    <!-- booking-container starts-->
    <div class="booking-container">
      <div class="booking-header">

        <div class="booking-skill">
          <p>Skill</p>
        </div>

        <div class="booking-name">
          <p>Booked by</p>
        </div>

        <div class="booking-date">
          <p>Date</p>
        </div>
      </div>

      <div class="booking-content">
        <% @user.skills.limit(3).each do |skill| %>
        <div class="booking-skill">
          <p><%= skill.name %></p>
        </div>

        <div class="booking-name">
          <p><%= skill.name %></p>
        </div>

        <div class="booking-date">
          <p>(book date)</p>
        </div>
      </div>
    <% end %>
    </div>

    <!--booking-container ends-->


  </div>



























