

<%= image_tag('Login.jpeg', id:'background') %>
<div class="containerj">
<div class="login-formj">
<div class="centerj">



<h1>Log In</h1>

</div>
<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="centerj columnj">
    <%= f.input_field :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email" }, class: "inputj" %>
    <%= f.input_field :password,
                required: false,
                input_html: { autocomplete: "current-password" }, class: "inputj" %>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Log in" %>
  </div>
<% end %>

<div>
<%= render "devise/shared/links"%>
</div>
</div>
</div>
